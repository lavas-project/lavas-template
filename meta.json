{
    "etpl": {
        "commandOpen": "{%",
        "commandClose": "%}",
        "variableOpen": "*__",
        "variableClose": "__*"
    },
    "extData": {
        "packageJsonAuthor": "*__ author __*<*__ email __*>"
    },
    "renderIgnores": [],
    "exportsIgnores": [
        "build",
        "_old",
        "build.js",
        "package.json",
        "server.dev.js",
        "server.express.js",
        "webpack.config.js",
        ".gitignore",
        "test"
    ],
    "exportsPackageJson": {
        "name": "*__name__*",
        "version": "1.0.0",
        "description": "*__desc__*",
        "author": "*__author__*<*__email__*>",
        "scripts": {
            "dev": "cross-env NODE_ENV=development lavas dev",
            "lint": "fecs ./ --rule --type 'vue,js,css'",
            "build": "lavas build"
        },
        "lavas": true,
        "keywords": [
            "pwa",
            "vue",
            "lavas"
        ],
        "license": "MIT",
        "dependencies": {
            "iscroll": "^5.2.0",
            "koa": "^2.3.0",
            "normalize.css": "^7.0.0",
            "vuetify": "^0.15.2"
        },
        "devDependencies": {
            "cross-env": "^5.0.5",
            "fecs": "^1.4.0",
            "lavas-core": "latest"
        }
    },
    "core": "lavas-core-vue",
    "schema": {
        "dirPath": {
            "type": "string",
            "name": "项目目录",
            "default": "./",
            "invalidate": "该 path 不存在, 请输入正确的 path。",
            "description": "存储导出工程的目录",
            "disable": true,
            "jsonType": "string"
        },
        "name": {
            "type": "string",
            "name": "项目名称",
            "default": "pwa-project",
            "regExp": "^([a-z_][0-9a-z_\\-]{1,213})?$",
            "invalidate": "项目名称请输入小写字母数字 - _ 等 url 安全字符",
            "description": "工程的项目名和文件夹名",
            "jsonType": "string"
        },
        "author": {
            "type": "string",
            "name": "项目作者",
            "default": "yourname",
            "description": "工程的作者，代码注释和 package.json 需要用到",
            "jsonType": "string"
        },
        "email": {
            "type": "string",
            "name": "email",
            "default": "someone@somecompany.com",
            "regExp": "^(\\w-*\\.*)+@(\\w-?)+(\\.\\w{2,})+$",
            "invalidate": "邮箱格式错误",
            "jsonType": "string",
            "description": "作者邮箱"
        },
        "desc": {
            "type": "string",
            "name": "项目描述",
            "default": "这是一个 Lavas PWA 项目",
            "jsonType": "string",
            "description": "工程的描述，用于 package.json 和 manifest.json 中的项目描述"
        }
    }
}
